{
  "name": "aqua-contracts",
  "version": "0.0.1",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat compile && hardhat test",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint --max-warnings 0 .",
    "prettier": "prettier 'contracts/**/*.sol' -w && prettier '**/*.ts' -w && prettier 'tasks/*.js' -w",
    "precommit": "tsc --noEmit && yarn prettier && yarn lint && yarn test",
    "coverage": "hardhat compile && hardhat coverage",
    "flatten": "./tasks/flatten.sh",
    "deploy:rinkeby": "hardhat deploy --network rinkeby --tags AQUA",
    "deploy:xdai": "hardhat deploy --network xdai --tags AQUA"
  },
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "dotenv": "^8.2.0",
    "hardhat-gas-reporter": "^1.0.4",
    "solc": "0.6.8"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.1.2",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.0.4",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chai": "^4.2.0",
    "debug": "^4.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.4.1",
    "hardhat-deploy": "^0.8.9",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "hardhat": "^2.4.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.60",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.13",
    "ts-node": "^9.0.0",
    "typechain": "^5.1.1",
    "typescript": "^4.0.5"
  }
}